<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
     android:background="@drawable/grey_blue"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewImage"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="65dp"
            android:layout_gravity="center_vertical"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="4dp">

            <ImageView
                android:id="@+id/partnerLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/africa_rsn"
                android:contentDescription="@string/todo" />
        </androidx.cardview.widget.CardView>



        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/cardViewImage"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regional"
                android:textColor="@color/Green"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sustainability"
                android:textColor="@color/yellow_green"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/network"
                android:textColor="@color/Green"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
<ScrollView
    app:layout_constraintTop_toBottomOf="@id/logo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
         android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/layoutsyle"
        android:paddingBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewPartner"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:clickable="true"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="3dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/cards"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/project_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:paddingBottom="5dp"
                    android:src="@drawable/tree_info"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/project_image"
                    android:layout_marginTop="4dp"
                    android:background="@color/limeGreen"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="@string/my_projects"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/forest_green"
                    android:textStyle="bold"
                    android:theme="@style/ThemeOverlay.AppCompat.Light" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewBlog"
            android:layout_width="150dp"
            android:layout_height="150dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="3dp"

            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintLeft_toRightOf="@id/cardViewPartner"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/cards"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/Blog_Feed"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"

                    android:paddingBottom="5dp"
                    android:src="@drawable/green_blog"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Blog_Feed"
                    android:layout_marginTop="4dp"
                    android:background="@color/greenDark"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="@string/interactive_feed"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#ffff00"
                    android:textStyle="bold"
                    android:theme="@style/ThemeOverlay.AppCompat.Light" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewEvents"
            android:layout_width="150dp"
            android:clickable="true"
            android:layout_height="150dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="3dp"
            android:layout_below="@id/cardViewBlog"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"

            app:layout_constraintLeft_toRightOf="@id/cardViewPodCast"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewBlog"
            android:focusable="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/event_Image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"

                    android:contentDescription="@string/todo"

                    android:paddingBottom="5dp"
                    android:src="@drawable/calender3" />

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_Image"
                    android:layout_marginTop="4dp"
                    android:background="@color/limeGreen"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="@string/rsn_events"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/forest_green"
                    android:textStyle="bold"
                    android:theme="@style/ThemeOverlay.AppCompat.Light" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewPodCast"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/cardViewPartner"
            android:layout_alignParentEnd="true"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="3dp"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewPartner">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/podCast_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:paddingBottom="5dp"
                    android:src="@drawable/green_pod"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/podCast_image"
                    android:layout_marginTop="4dp"
                    android:background="@color/greenDark"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="@string/rsn_podcast"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#ffff00"
                    android:textStyle="bold"
                    android:theme="@style/ThemeOverlay.AppCompat.Light" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
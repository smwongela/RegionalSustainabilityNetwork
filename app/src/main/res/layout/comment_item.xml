<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/greenDark">

          <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/greenDark"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">


                        <ImageView
                            android:id="@+id/commenterImage"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/circular_bordershape"

                            android:layout_gravity="center_vertical"

                          />


                <TextView
                    android:id="@+id/commenterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/commenterImage"
                    app:layout_constraintLeft_toRightOf="@id/commenterImage"
                    android:layout_toEndOf="@id/commenterImage"
                    android:fontFamily="serif"
                    android:gravity="end"
                    android:text="@string/stanslaus"
                    android:layout_marginStart="4dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/yellow_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/commentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="4dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toTopOf="@id/commenterImage"
                    app:layout_constraintLeft_toRightOf="@id/commenterImage"
                    app:layout_constraintTop_toBottomOf="@id/the_comment"
                    android:text="@string/time"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/commentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/commenterImage"
                    app:layout_constraintLeft_toRightOf="@id/commentTime"
                    app:layout_constraintTop_toBottomOf="@id/the_comment"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="24dp"
                    android:layout_toEndOf="@id/commentTime"
                    android:text="@string/date"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/the_comment"
                    app:layout_constraintLeft_toRightOf="@id/commenterImage"
                   app:layout_constraintTop_toBottomOf="@id/commenterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/commenterName"
                    android:text="@string/this_is_the_comment"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/delete_comment"
                    app:layout_constraintLeft_toRightOf="@id/the_comment"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/commenterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:visibility="invisible"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/commenterName"
                    android:text="@string/delete"

                    android:textColor="#FF0000" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

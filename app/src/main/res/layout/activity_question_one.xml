<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/display"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@color/greenDark"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="3dp" >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewImage"
                    android:layout_width="150dp"
                    android:layout_height="90dp"

                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="0dp"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/partnerLogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/rsn_modified"
                        android:contentDescription="@string/todo" />

                </androidx.cardview.widget.CardView>


                </androidx.cardview.widget.CardView>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="@string/survey"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/event_name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="@android:color/white" />



                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                  />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/q1_constellation_of_participants"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="@android:color/white" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="-4dp"

                    android:fontFamily="sans-serif-light"
                    android:text="@string/please_indicate_number_of"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="@android:color/white" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditText.White.Hint">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-4dp"
                        android:layout_marginRight="-4dp"
                        android:id="@+id/number_of_men"
                        android:hint="@string/men"
                        android:inputType="number"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/grey_10"
                        android:theme="@style/EditText.White" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditText.White.Hint">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-4dp"
                        android:layout_marginRight="-4dp"
                        android:id="@+id/number_of_women"
                        android:hint="@string/women"
                        android:inputType="number"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/grey_10"
                        android:theme="@style/EditText.White" />

                </com.google.android.material.textfield.TextInputLayout>



                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/EditText.White.Hint"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/number_of_youth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/youth"
                            android:inputType="number"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/grey_10"
                            android:theme="@style/EditText.White"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/select_event_photo"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="@android:color/white" />
                <ImageButton
                    android:id="@+id/imagebuttonEvent"
                    android:layout_width="330dp"
                    android:layout_height="230dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/add_image"
                    android:contentDescription="@string/todo" />
                <TextView
                    android:id="@+id/location_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/posted_at"
                    android:visibility="invisible"/>


                <View
                    android:layout_width="0dp"
                    android:layout_height="70dp"

                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">



                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabQ1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:textStyle="bold"
                        android:tint="@color/cyan_800"
                        app:backgroundTint="@android:color/white"
                        app:fabSize="normal"
                        app:rippleColor="@color/cyan_800"
                        app:srcCompat="@drawable/ic_arrow_right"
                        android:focusable="true" />



                </RelativeLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_medium" />

            </LinearLayout>
        </RelativeLayout>
                </ScrollView>
</RelativeLayout>



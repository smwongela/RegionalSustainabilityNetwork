<?xml version="1.0" encoding="utf-8"?>
 <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/cardTest1"
                android:layout_width="match_parent"
                android:layout_height="300dp"

                android:layout_margin="8dp"
                >


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:background="@drawable/stickgreen"
        android:orientation="vertical"
        android:padding="8dp">

        <!--
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/pushpin"
                        />-->
        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp" />



            <ImageView
                android:id="@+id/userImage"
                android:layout_marginStart="20dp"

                android:layout_width="40dp"
                android:layout_height="40dp"

                android:src="@drawable/wood" />


        <TextView
            android:id="@+id/text_view_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="50dp"
            android:text="@string/projectTitle"
            android:textColor="@color/navy_blue"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/amsterdam"
            android:text="Mwanza Social Hall"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_view_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="51dp"
            android:fontFamily="@font/amsterdam"
            android:text="Tanzania"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_view_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:text="CAN"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_view_event_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="53dp"
            android:fontFamily="@font/amsterdam"
            android:text="Workshop"
            android:textColor="@color/greenDark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:text="19th, March 2021"
            android:textColor="@color/forest_green"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.cardview.widget.CardView>
